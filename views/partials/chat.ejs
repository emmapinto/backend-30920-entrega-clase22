<form id="form-mensajes" class="chatForm" onsubmit="return addMessage(this)">
 
    <p>Mensajes:</p>
    <ul id="lista-mensajes">
        <% message.forEach(function(item) { %>
            <ul>
                <li><strong style="color: #EF4423"><%= item.email %> </strong>
                    <span>[ <%= item.nombre %> ]</span><span>(<%= item.edad %>) </span>
                    <span style="color: #4FAF44">[ <%= item.timestamp %> ]: </span>
                    
                    <br>
                    <em style="color: #F6EB14"><%= item.mensaje %></em>
                </li>
            </ul>
        <% }); %>
    </ul>
    <hr>
    <div>
        <label for="email">Email</label>
        <input type="text" id="email" name="email" required>
    </div>
    <hr>
    <div>
        <label for="nombre">Nombre</label>
        <input type="text" id="nombre" name="nombre" required>
    </div>
    <hr>
    <div>
        <label for="nombre">Edad</label>
        <input type="number" id="edad" name="edad" required>
    </div>
    <hr>
    <div>
        <label for="mensaje">Mensaje</label>
        <input type="text" id="mensaje" name="mensaje" required>
    </div>
    <hr>
    <div>
        <input class="btn btn-outline-secondary" type="submit" value="Enviar mensaje">
    </div>
    <hr>
</form>